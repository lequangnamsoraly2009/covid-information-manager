<div class="container-fluid">
  <div class="banner-list-covider">
    <img
      src="https://nhuxuan.thanhhoa.gov.vn/portal/Photos/2021-08-26/84e1b1cd2e6ee1dz6.jpg"
      alt="khaulenh"
    />
  </div>
  <div class="detail-covider-header">
    <h1>Thêm Gói Nhu Yếu Phẩm</h1>
    <a
      class="btn btn-primary button detail-covider-back"
      href="/package-product"
      role="button"
    >Go back list</a>
  </div>
  <form
    enctype="multipart/form-data"
    class="add-covider"
    method="POST"
    action=""
  >
    <div class="form-group">
      <label for="formGroupExampleInput">Tên Gói Nhu Yếu Phẩm</label>
      <input
        type="text"
        class="form-control"
        id="formGroupExampleInput"
        placeholder="Gói Số 1"
        name="ten"
      />
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">Giới Hạn Số Lượng</label>
      <input
        type="number"
        class="form-control"
        id="formGroupExampleInput2"
        placeholder="9"
        name="gioihan_goi"
      />
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">Thời Gian Giới Hạn</label>
      <select name="thoigian" id="">
        <option selected value="ngay">Ngày</option>
        <option value="tuan">Tuần</option>
        <option value="thang">Tháng</option>
      </select>
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">Thêm sản phẩm vào gói hàng: </label>
      {{#unless data}}
        link tới chổ thêm sp
      {{else}}
        <div class="multiselect">
          <div class="selectBox" onclick="showCheckboxes()">
            <select>
              <option>-- Chọn các sản phẩm</option>
            </select>
            <div class="overSelect"></div>
          </div>
          <div id="checkboxes">
            {{#each data}}
              <label for="{{this.SP_id}}">
                <input
                  type="checkbox"
                  id="{{this.SP_id}}"
                  value="{{this.SP_id}}"
                  name="DS_sp_id"
                />{{this.SP_id}}
                /
                {{this.ten}}
                /
                {{this.gia}}
                /
                {{this.donvi}}</label><br />
            {{/each}}
          </div>
        </div>
      {{/unless}}
    </div>
    <button type="submit" class="btn btn-primary add-package-submit-1">Thêm gói
      nhu yếu phẩm</button>
  </form>

</div>
<script>var expanded = false; function showCheckboxes() { var checkboxes =
  document.getElementById("checkboxes"); if (!expanded) {
  checkboxes.style.display = "block"; expanded = true; } else {
  checkboxes.style.display = "none"; expanded = false; } }</script>