<div class="container-fluid">
  <div class="banner-list-covider">
    <img
      src="https://nhuxuan.thanhhoa.gov.vn/portal/Photos/2021-08-26/84e1b1cd2e6ee1dz6.jpg"
      alt="khaulenh"
    />
  </div>
  <div>
    <div class="list-product-header">
      <h1>Danh Sách Các Gói Nhu Yếu Phẩm</h1>
    </div>
    <div class="list-product-features">
      <form class="form-inline my-2 my-lg-0">
        <input
          class="form-control mr-sm-2 search-product"
          type="search"
          placeholder="Search"
          aria-label="Search"
        />
        <button
          class="btn btn-primary my-2 my-sm-0 list-product-button"
          type="submit"
        >Search</button>
      </form>
      <a
        class="btn btn-primary covid-list-btn-add btn-sm list-product-button"
        href="/package-product/add"
        role="button"
      >Add package</a>
      <select
        class="form-select covid-list-select list-product-button"
        aria-label="Default select example"
      >
        <option selected>Sắp Xếp</option>
        <option value="1">Mặc Định</option>
        <option value="2">Tên A-Z</option>
        <option value="3">Tên Z-A</option>
      </select>
    </div>
    <div class="list-product-list">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Package ID</th>
            <th scope="col">Tên Gói</th>
            <th width="25%" scope="col">Danh Sách Sản Phẩm</th>
            <th scope="col">Giới hạn số lượng</th>
            <th scope="col">Giới Hạn</th>
            <th scope="col">Thời Gian GH</th>
            <th width="10%" scope="col">Chức Năng</th>
          </tr>
        </thead>
        <tbody>
          {{#each data}}
            <tr>
              <th scope="row">{{this.id}}</th>
              <td>{{this.packageName}}</td>
              <td>
                <ul>
                  {{#each this.listProduct}}
                    <li>{{this}}</li>
                  {{/each}}
                </ul>
              </td>
              <td>{{this.limitQuantity}}</td>
              <td>{{this.limitPerson}}</td>
              <td>{{this.limitTime}}</td>
              <td>
                <div class="list-product-action">
                  <a
                    class="btn btn-primary package-list-btn btn-sm"
                    href="/package-product/view/{{this.id}}"
                    role="button"
                  >View</a>
                  <a
                    class="btn btn-primary package-list-btn btn-sm"
                    href="/package-product/edit/{{this.id}}"
                    role="button"
                  >Edit</a>
                  <a
                    class="btn btn-primary package-list-btn btn-sm"
                    href="/package-product/delete/{{this.id}}"
                    role="button"
                  >Delete</a>
                </div>
              </td>
            </tr>
          {{/each}}
          <tr>
            <th scope="row">PP-01</th>
            <td>Gói Số 1</td>
            <td>
              <ul>
                <li>Mắm</li>
                <li>Muối</li>
                <li>Đường</li>
              </ul>
            </td>
            <td>10</td>
            <td>2</td>
            <td>2 Tuần</td>
            <td>
              <div class="list-product-action">
                <a
                  class="btn btn-primary package-list-btn btn-sm"
                  href="/package-product/view/:id"
                  role="button"
                >View</a>
                <a
                  class="btn btn-primary package-list-btn btn-sm"
                  href="/package-product/edit/:id"
                  role="button"
                >Edit</a>
                <a
                  class="btn btn-primary package-list-btn btn-sm"
                  href="/package-product/delete/:id"
                  role="button"
                >Delete</a>
              </div>
            </td>
          </tr>
          <tr>
            <th scope="row">PP-01</th>
            <td>Gói Số 1</td>
            <td>
              <ul>
                <li>Mắm</li>
                <li>Muối</li>
                <li>Đường</li>
              </ul>
            </td>
            <td>10</td>
            <td>2</td>
            <td>2 Tuần</td>
            <td>
              <div class="list-product-action">
                <a
                  class="btn btn-primary package-list-btn btn-sm"
                  href="/package-product/view/:id"
                  role="button"
                >View</a>
                <a
                  class="btn btn-primary package-list-btn btn-sm"
                  href="/package-product/edit/:id"
                  role="button"
                >Edit</a>
                <a
                  class="btn btn-primary package-list-btn btn-sm"
                  href="/package-product/delete/:id"
                  role="button"
                >Delete</a>
              </div>
            </td>
          </tr>
          <tr>
            <th scope="row">PP-01</th>
            <td>Gói Số 1</td>
            <td>
              <ul>
                <li>Mắm</li>
                <li>Muối</li>
                <li>Đường</li>
              </ul>
            </td>
            <td>10</td>
