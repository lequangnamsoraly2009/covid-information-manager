<div class="container-fluid">
  <div class="banner-list-covider">
    <img
      src="https://nhuxuan.thanhhoa.gov.vn/portal/Photos/2021-08-26/84e1b1cd2e6ee1dz6.jpg"
      alt="khaulenh"
    />
  </div>
  <div class="card admin-account-card">
    <div class="card-header admin-account-header">
      <h4 class="card-title">Danh sách các điểm điều trị/cách ly</h4>
      <a
        class="btn btn-primary button detail-covider-back"
        href="/admin/location/add"
        role="button"
      >Add Location</a>
      <a
        class="btn btn-primary button detail-covider-back"
        href="/"
        role="button"
      >Go back</a>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table">
          <thead class="text-primary">
            <th width="5%">
              <strong>Id</strong>
            </th>
            <th width="50%">
              <strong>Tên Địa Điểm</strong>
            </th>
            <th>
              <strong>Sức chứa</strong>
            </th>
            <th>
              <strong>Còn trống</strong>
            </th>
            <th width="20%">
              <strong>Chức năng</strong>
            </th>
          </thead>
          <tbody>
            {{#each data}}
              <tr>
                <td>
                  <strong>{{this.DieuTri_id}}</strong>
                </td>
                <td>
                  <strong>{{this.ten}}</strong>
                </td>
                <td>
                  <strong>{{this.succhua}}</strong>
                </td>
                <td>
                  <strong>{{this.controng}}</strong>
                </td>
                <td>
                  <a
                    class="btn btn-primary"
                    href="/admin/location/edit/{{this.DieuTri_id}}"
                    role="button"
                  >Edit</a>
                  <form
                    action="/admin/location/delete/{{this.DieuTri_id}}?_method=DELETE"
                    method="POST"
                    style="display: inline-block;"
                  >
                    <button
                      class="btn btn-primary"
                      role="button"
                      type="submit"
                    >Delete</button>
                  </form>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>