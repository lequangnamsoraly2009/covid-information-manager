<div class="container-fluid">
  <div class="banner-list-covider">
    <img
      src="https://nhuxuan.thanhhoa.gov.vn/portal/Photos/2021-08-26/84e1b1cd2e6ee1dz6.jpg"
      alt="khaulenh"
    />
  </div>
  <div class="card admin-account-card">
    <div class="card-header admin-account-header">
      <h4 class="card-title">Chỉnh sửa Địa Điểm Cách Ly/Điều Trị</h4>
      <a
        class="btn btn-primary button detail-covider-back"
        href="/admin/location"
        role="button"
      >Go back</a>
    </div>
    <div class="card-body">
      {{#if product}}
        <form
          enctype="multipart/form-data"
          class="add-covider"
          method="POST"
          action=""
        >
          <div class="form-group">
            <label for="formGroupExampleInput">Tên Sản Phẩm</label>
            <input
              type="text"
              class="form-control"
              id="formGroupExampleInput"
              placeholder="Gạo"
              value="{{product.productName}}"
              name="productName"
            />
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput2">Hình ảnh minh họa</label>
            <input
              type="file"
              class="file-upload"
              id="formGroupExampleInput2"
              name="images"
              value="{{product.images}}"
              accept="image/*"
              multiple="true"
            />
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput2">Giá Tiền</label>
            <input
              type="number"
              class="form-control"
              id="formGroupExampleInput2"
              value="{{product.price}}"
              placeholder="100000 vnd"
              name="price"
            />
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput2">Đơn Vị Định Lượng</label>
            <select name="quantitative">
              <option value="KG">
                KiloGram (KG)
              </option>
              <option value="Gram">
                Gram (gr)
              </option>
              <option value="L">
                Lit (L)
              </option>
              <option value="ml">
                MiliLit (ml)
              </option>
              <option value="Chai">
                Chai
              </option>
              <option value="Bó">
                Bó
              </option>
              <option value="Thùng">
                Thùng
              </option>
              <option value="Hộp">
                Hộp
              </option>
              <option value="Cây">
                Cây
              </option>
              <option value="Cái">
                Cái
              </option>
            </select>
          </div>
          <button type="submit" class="btn btn-primary add-covider-submit-1">Sửa
            nhu yếu phẩm</button>
        </form>
      {{/if}}
    </div>

  </div>
</div>