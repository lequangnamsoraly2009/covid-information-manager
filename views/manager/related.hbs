{{#unless data}}
  <h1>Chưa có dữ liệu kìa bạn ơi</h1>
{{else}}
  <div class="container-fluid">
    <h1>List danh sách người liên quan Covid-19</h1>
    <div class="covid-list-nav">
      <nav class="navbar navbar-light bg-light">
        <form class="form-inline" action="" , method="GET">
          <input
            class="form-control mr-sm-2"
            type="search"
            placeholder="Search"
            aria-label="Search"
            name="q"
            width="400px"
          />
          <button
            class="btn btn-primary my-2 my-sm-0"
            type="submit"
          >Search</button>
        </form>
      </nav>
      <a
        class="btn btn-primary covid-list-btn-add btn-sm"
        href="/manager/related-covid/add"
        role="button"
      >Add new user</a>
      <select class="form-select covid-list-select" aria-label="Default select example">
        <option selected>Sắp Xếp</option>
        <option value="1">Mặc Định</option>
        <option value="2">Tên A-Z</option>
        <option value="3">Tên Z-A</option>
      </select>
    </div>
    <ul class="covid-list">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Họ Và Tên</th>
            <th scope="col">Trạng Thái</th>
            <th scope="col">Nơi điều trị</th>
            <th scope="col">Liên Quan Với</th>
          </tr>
        </thead>
        <tbody>
          {{#each data}}
            <tr>
              <th scope="row">{{this.Nguoi_id}}</th>
              <td><a
                  href="/manager/related-covid/list/{{this.Nguoi_id}}"
                >{{this.hoten}}</a></td>
              <td>{{this.trangthai}}</td>
              <td>{{this.ten}}</td>
              <td>ID-12</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      <nav aria-label="Page navigation" class="covid-list-pagination">
        <ul class="pagination">
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          <li class="page-item"><a
              class="page-link"
              href="/manager/related-covid/list?page=1"
            >1</a></li>
          <li class="page-item"><a
              class="page-link"
              href="/manager/related-covid/list?page=2"
            >2</a></li>
          <li class="page-item"><a
              class="page-link"
              href="/manager/related-covid/list?page=3"
            >3</a></li>
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>
    </ul>
  </div>
{{/unless}}