<div class="container-fluid">
  <div class="banner-list-covider">
    <img
      src="https://nhuxuan.thanhhoa.gov.vn/portal/Photos/2021-08-26/67871893154d1d2dz2.jpg"
      alt="khaulenh"
    />
  </div>
  <div class="detail-covider-header">
    <h1>Thêm nhu yếu phẩm cần thiết cho điều trị covid </h1>
    <a
      class="btn btn-primary button detail-covider-back"
      href="/list-product"
      role="button"
    >Go back list</a>
  </div>
  <form
    enctype="multipart/form-data"
    class="add-covider"
    method="POST"
    action=""
  >
    <div class="form-group">
      <label for="formGroupExampleInput">Tên Sản Phẩm</label>
      <input
        type="text"
        class="form-control"
        id="formGroupExampleInput"
        placeholder="Gạo"
        name="ten"
      />
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">Hình ảnh minh họa</label>
      <input
        type="file"
        class="file-upload"
        id="formGroupExampleInput2"
        name="images"
        accept="image/*"
        multiple="true"
      />
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">Giá Tiền</label>
      <input
        type="number"
        class="form-control"
        id="formGroupExampleInput2"
        placeholder="100000 vnd"
        name="tien"
      />
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">Đơn Vị Định Lượng</label>
      <select name="donvi">
        <option value="KG">
          KiloGram (KG)
        </option>
        <option value="Gram">
          Gram (gr)
        </option>
        <option value="L">
          Lit (L)
        </option>
        <option value="ml">
          MiliLit (ml)
        </option>
        <option value="Chai">
          Chai
        </option>
        <option value="Bó">
          Bó
        </option>
        <option value="Thùng">
          Thùng
        </option>
        <option value="Hộp">
          Hộp
        </option>
        <option value="Cây">
          Cây
        </option>
        <option value="Cái">
          Cái
        </option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary add-covider-submit-1">Thêm nhu
      yếu phẩm</button>
  </form>
</div>